---
import { Icon } from 'astro-icon/components';
const currentYear = new Date().getFullYear();

const navigation = {
  product: [
    { name: 'Features', href: '#features' },
    { name: 'Demo', href: '#demo' },
    { name: 'Pricing', href: '#pricing' },
  ],
  company: [
    { name: 'About', href: '#' },
    { name: 'Blog', href: '#' },
    { name: 'Careers', href: '#' },
  ],
  legal: [
    { name: 'Privacy', href: '#' },
    { name: 'Terms', href: '#' },
    { name: 'Cookie Policy', href: '#' },
  ],
  social: [
    {
      name: 'Twitter',
      href: '#',
      icon: 'mdi:twitter',
    },
    {
      name: 'GitHub',
      href: '#',
      icon: 'mdi:github',
    },
    {
      name: 'LinkedIn',
      href: '#',
      icon: 'mdi:linkedin',
    },
  ],
};
---

<footer class="border-t border-primary/20 bg-dark-light">
  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
    <div class="xl:grid xl:grid-cols-3 xl:gap-8">
      <div class="space-y-8">
        <h3 class="text-2xl font-bold text-primary">ShopifyBot.ai</h3>
        <p class="text-sm text-gray-400">
          Revolutionizing e-commerce support with AI-powered automation. Transform your customer
          service experience today.
        </p>
        <div class="flex space-x-6">
          {
            navigation.social.map((item) => (
              <a
                href={item.href}
                class="text-gray-400 transition-colors duration-300 hover:text-primary"
              >
                <span class="sr-only">{item.name}</span>
                <Icon name={item.icon} class="h-6 w-6" />
              </a>
            ))
          }
        </div>
      </div>
      <div class="mt-12 grid grid-cols-2 gap-8 xl:col-span-2 xl:mt-0">
        <div class="md:grid md:grid-cols-2 md:gap-8">
          <div>
            <h3 class="text-sm font-semibold text-primary">Product</h3>
            <ul role="list" class="mt-4 space-y-4">
              {
                navigation.product.map((item) => (
                  <li>
                    <a
                      href={item.href}
                      class="text-sm text-gray-400 transition-colors duration-300 hover:text-primary"
                    >
                      {item.name}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
          <div class="mt-12 md:mt-0">
            <h3 class="text-sm font-semibold text-primary">Company</h3>
            <ul role="list" class="mt-4 space-y-4">
              {
                navigation.company.map((item) => (
                  <li>
                    <a
                      href={item.href}
                      class="text-sm text-gray-400 transition-colors duration-300 hover:text-primary"
                    >
                      {item.name}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
        <div class="md:grid md:grid-cols-2 md:gap-8">
          <div>
            <h3 class="text-sm font-semibold text-primary">Legal</h3>
            <ul role="list" class="mt-4 space-y-4">
              {
                navigation.legal.map((item) => (
                  <li>
                    <a
                      href={item.href}
                      class="text-sm text-gray-400 transition-colors duration-300 hover:text-primary"
                    >
                      {item.name}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="mt-12 border-t border-primary/20 pt-8">
      <p class="text-center text-sm text-gray-400">
        &copy; {currentYear} ShopifyBot.ai. All rights reserved.
      </p>
    </div>
  </div>
</footer>
